<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script>
 
  function signIn(){
    var code = document.getElementById('code');
    var passwordd = document.getElementById('password');
    if(code.value == ""){
      alert("코드를 입력해주세요");
      code.focus();
      return
    }
    if(passwordd.value == ""){
      alert("암호를 입력해주세요");
      passwordd.focus();
      return
    }
    signInForm.submit();
  }

  </script>
  <link rel="shortcut icon" href="/favicon.ico">
  <title>FiveMinuteBaccarat</title>
</head>
<body style="background-color:#212529">

  <div class="container">
    <div class="col-md-12" align="center">
      <img class="img-fluid" style="max-width:800px;" alt="Responsive image" src="images/newyork_square.jpg">
      <div style="width: 20rem;margin-top:1rem ;background-color:#212529">

        <form action="/auth/signin" method="post" name="signInForm">
          <input type="text" id="code" name="code" class="form-control" placeholder="코드" style="margin-bottom:5px;" />
          <input type="password" id="password" name="password" class="form-control" placeholder="암호" style="margin-bottom:5px;"/>
          <br>
          <input type="submit" id="SignIn" class="form-control btn-outline-warning" onclick=signIn() value="Log In" style="margin-bottom:10px;"/>
        </form>
        <a class="form-control btn-outline-warning" href="/signup" style="margin-bottom:10px;">가입</a>
        <br>
        
      </div>
      
    </div>
  <!-- Optional JavaScript -->
